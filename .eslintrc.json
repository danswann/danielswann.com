{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-import"
    ],
    "rules": {
        "indent": ["warn", 2],
        "quotes": ["warn", "single", {"avoidEscape": true, "allowTemplateLiterals": true}],

        "import/newline-after-import": ["warn", {"count": 2}]
    }
}
